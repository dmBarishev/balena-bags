<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To BalenaBags</h1>
             <p>View our hand-made bags</p>
             <p>
                <a class="btn btn-primary btn-large" href="/bags/new">Add New Bag</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% bags.forEach(function(bag){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= bag.image %>">
                   <div class="caption">
                       <h4><%= bag.name %></h4>
                   </div>
                   <p>
                       <a href="/bags/<%= bag._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>